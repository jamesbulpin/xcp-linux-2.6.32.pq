-	EFHW_ASSERT(num % 1 == 0);
-	start_id = start_id >> 1;
-	end_id = end_id >> 1;
-#endif
-
-	EFHW_ASSERT(num >= 1);
-
-	__DWCHCK(BUF_CLR_START_ID_LBN, BUF_CLR_START_ID_WIDTH);
-	__DW2CHCK(BUF_CLR_END_ID_LBN, BUF_CLR_END_ID_WIDTH);
-
-	__DW2CHCK(BUF_CLR_CMD_LBN, BUF_CLR_CMD_WIDTH);
