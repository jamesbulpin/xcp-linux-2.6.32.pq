-static int falcon_nic_filter_set(struct efhw_nic *nic,
-				 struct efhw_filter_spec *spec,
-				 int *filter_idx_out)
-{
-	FALCON_LOCK_DECL;
-	unsigned key = 0, tbl_size = 0, hash1, hash2, k;
-	struct efhw_filter_depth *depth = NULL;
-	int filter_idx = -1;
-	int rc = 0;
-	uint64_t q0, q1;
-
