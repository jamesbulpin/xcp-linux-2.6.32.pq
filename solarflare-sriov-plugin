-		handler = virs->evq_callback_fn;
-		arg = virs->evq_callback_arg;
-		EFRM_ASSERT(handler != NULL);
-		handler(arg, is_timeout, nic);
-	}
-
-	/* Clear the BUSY bit. */
-	bit =
-	    test_and_clear_bit(VI_RESOURCE_EVQ_STATE_BUSY,
-			       &cb_info->state);
