+#ifdef EFX_NEED_MDELAY
+	#include <linux/delay.h>
+	#undef mdelay
+	#define mdelay(_n)				\
+		do {					\
+			unsigned long __ms = _n;	\
+			while (__ms--) udelay(1000);	\
+		} while (0);
+#endif
