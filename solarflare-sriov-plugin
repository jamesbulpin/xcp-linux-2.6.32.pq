-				      h->iobuff_off, EFHW_NIC_PAGE_SIZE, 0,
-				      1 << page_order, 0);
-
-	if (evq_instance >= FALCON_EVQ_TBL_RESERVED)
-		falcon_nic_buffer_table_confirm(nic);
-	return 0;
-}
