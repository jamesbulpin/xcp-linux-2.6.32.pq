-static void clear_filter_cache_entry(struct efhw_nic *nic,
-				     int filter_idx)
-{
-	nic->filter_in_use[filter_idx] = 0;
-#if FALCON_FULL_FILTER_CACHE
-	memset(filter_spec_cache_entry(nic, filter_idx), 0,
-	       sizeof(struct efhw_filter_spec));
-#endif
-}
