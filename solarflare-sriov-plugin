+#if (defined(EFX_NEED_UNMASK_MSIX_VECTORS) || \
+     defined(EFX_NEED_SAVE_MSIX_MESSAGES)) && \
+	!defined(EFX_HAVE_MSIX_TABLE_RESERVED)
