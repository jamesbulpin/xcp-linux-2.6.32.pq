-				   struct efhw_filter_spec *spec,
-				   int filter_idx)
-{
-	nic->filter_in_use[filter_idx] = 1;
-#if FALCON_FULL_FILTER_CACHE
-	memcpy(filter_spec_cache_entry(nic, filter_idx), spec,
-	       sizeof(struct efhw_filter_spec));
-#endif
-}
