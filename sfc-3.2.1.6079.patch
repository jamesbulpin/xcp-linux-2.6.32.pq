-	c = list_entry(st->conns.prev, struct netfront_accel_ssr_conn,
-		       link);
-	if (jiffies - c->last_pkt_jiffies > (HZ / 50 + 1)) {
-		NETFRONT_ACCEL_STATS_OP(++vnic->stats.ssr_drop_stream);
