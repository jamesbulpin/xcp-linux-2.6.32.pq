-
-	if ((hashtab->table0[hash].state == CUCKOO_HASH_STATE_OCCUPIED)
-	    && cuckoo_hash_key_compare(hashtab, &(hashtab->table0[hash].key),
-				       key)) {
-		*value = hashtab->table0[hash].value;
-		return 1;
-	}
-
-	return 0;
-}
