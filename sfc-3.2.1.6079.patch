+	if (!entry)
+		return;
+	remove_proc_entry(entry->name, entry->parent);
+	if (S_ISDIR(entry->mode)) {
+		for (binding = entry->data; binding != NULL; binding = next) {
+			next = binding->next;
+			kfree(binding);
+		}
+	}
