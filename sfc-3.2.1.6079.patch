-	ef_vi_txq_state* qs = &vi->ep_state->txq;
-	ef_vi_falcon_dma_tx_buf_desc* dp;
-	unsigned len, dma_len, di;
-	unsigned added_save = qs->added;
-	ef_addr dma_addr;
-	unsigned last_len = 0;
