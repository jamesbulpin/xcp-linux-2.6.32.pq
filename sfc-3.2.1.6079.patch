-		last_len = iov[iov_len - 1].iov_len;
-		if( last_len <= 4 ) {
-			ef_assert(iov_len > 1);
-			--iov_len;
-			last_len = iov[iov_len - 1].iov_len - (4 - last_len);
-		}
-		else {
-			last_len = iov[iov_len - 1].iov_len - 4;
-		}
-		if( iov_len == 1 )
-			len = last_len;
-	}
-
-	while( 1 ) {
-		if( qs->added - qs->removed >= q->mask ) {
-			qs->added = added_save;
-			return -EAGAIN;
-		}
