-		dp = (ef_vi_falcon_dma_tx_buf_desc*) q->descriptors + di;
-		if( vi->vi_flags & EF_VI_TX_PHYS_ADDR )
-			falcon_dma_tx_calc_ip_phys
-				(ef_physaddr(dma_addr), dma_len, /*port*/ 0,
