-		if( len == 0 ) {
-			if( --iov_len == 0 )  break;
-			++iov;
-			dma_addr = iov->iov_base;
-			len = iov->iov_len;
-			if( (vi->vi_flags & EF_VI_ISCSI_TX_DDIG) &&
-			    (iov_len == 1) )
-				len = last_len;
-		}
-	}
