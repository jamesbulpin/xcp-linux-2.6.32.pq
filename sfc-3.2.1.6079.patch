-static inline void
-efrm_buddy_free_list_add(struct efrm_buddy_allocator *b,
-			 unsigned order, unsigned addr)
-{
-	list_add(&b->links[addr], &b->free_lists[order]);
-	b->orders[addr] = (uint8_t) order;
